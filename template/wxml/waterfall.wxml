<!-- 公共头部 -->
<template name ='head'>
  <navigator  open-type='navigateBack' target delta='1' class="backhome" wx:if="{{redBack}}" ><image  src="../../images/back.png"></image></navigator>
  <navigator  open-type='navigateBack' target delta='1' class="backhome"  wx:else><image  src="../../images/left.png"></image></navigator>
  <view class="header">
    <view>{{titlename}}</view>
  </view>
</template>
<!-- 分类显示商铺 -->
<template name ='waterfall'>
    <navigator class="store_item radiusbox flexbox" wx:for='{{stores}}' url='../../pages/orderOrPayment/orderOrPayment?store_id={{item.store_id}}&store_name={{item.store_name}}&city={{city}} ' wx:key="item">  
      <image src="{{url}}{{item.store_logo}}" lazy-load="true" mode="aspectFill"></image>
      <view class="store_info">
         <view class="store_title">
            <text>{{item.store_name}}</text>
        </view>
        <view class="store_score">
          <text class="pinkB">{{item.store_score}}</text><text class="smallsize">分</text>{{item.discount}}条点评
        </view>
        <view class="marks">
          <text wx:for="{{item.list_store_tag}}" wx:key='item' wx:for-item='tag'>{{tag}}</text>
        </view>
        <view class="address flexbox">
          <text>{{item.store_area}}</text>
          <text class="textover">{{}}</text>
        </view>
        <view class="money  flexbox">
          <text>距您{{item.distance}}公里</text>
          <view>
            <!-- <text class="formal">￥567</text> -->
            <text class="pink">￥</text>
            <text class="pinkB">{{item.average_price}}</text>起
          </view>
        </view>
      </view>
    </navigator>
    <view>
      <!-- <view class="loading"></view> -->
    </view>
    <image src="../../images/top.png" mode="aspectFit" class="toTop"  hidden='{{!floorstatus}}'  bindtap="toTop"> </image>
</template>
