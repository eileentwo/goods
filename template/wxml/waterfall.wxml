        </view>
        <view class="store_score">
          <image wx:for="{{num}}" src="../../images/redStar.png" lazy-load="true" mode="aspectFill"></image>
          <image src="../../images/half.png" lazy-load="true" mode="aspectFill" wx:if="{{half==1}}"></image>
