<!-- 省到爆显示 -->
<template name ='waterfall_save'>
    <navigator class="store_item save_item flexbox" wx:for='{{stores}}' url='../../pages/orderOrPayment/orderOrPayment?store_id={{item.store_id}}&store_name={{item.store_name}}&city={{city}} ' wx:key="item">  
      <image src="{{item.store_logo?item.store_logo:'../../images/noImg.png'}}" class="showImg" lazy-load="true" mode="aspectFill"></image>
      <view class="store_info">
         <view class="save_title flexbox">
            <text>{{item.store_name}}</text>
            <text class="pinkBox" wx:if="{{listitem.discount>0}}">特惠</text>
        </view>
        <view class="store_score">
          <image wx:for="{{num}}" src="../../images/redstar.png" lazy-load="true" mode="aspectFill"></image>
          <image src="../../images/half.png" lazy-load="true" mode="aspectFill" wx:if="{{half==1}}"></image>
          <text class="pink">{{item.store_score}}分</text>
        </view>
        <view class="address flexbox">
          <text class="fz24">人均 ¥ {{item.average_price}}</text>
          <text class="fz18">月售{{item.month_count}}</text>
        </view>
        <view class="fz20 flexbox">
          <text>[{{item.store_area}}]{{item.store_desc}}</text>
        </view>
        <view class="money flexbox" >
          <view class=" fz18"><text  wx:for="{{item.list_store_tag}}" wx:for-item='listitem' wx:key="{{listitem.tag_name}}" class="{{listitem.tag_name=='特惠'?'':'pink'}}">{{listitem.tag_name}}</text></view>
          <view >
            <text class="fz23">{{item.distance}}km</text>
          </view>
        </view>
      </view>
    </navigator>
    <view>
      <!-- <view class="loading"></view> -->
    </view>
    <image src="../../images/top.png" mode="aspectFit" class="toTop"  hidden='{{!floorstatus}}'  lazy-load="true" bindtap="toTop"> </image>
</template>
<!-- 小鹿精选显示 -->
<template name ='waterfall_choice'>
  <view class="store_item choice_item radiusbox "  wx:for='{{stores}}' wx:key="item" >  
      <view class="flexbox">
        <image src="{{item.store_logo?item.store_logo:'../../images/noImg.png'}}" lazy-load="true" class="store_logo" mode="aspectFill"></image>
        <view class="store_info">
            <view class="store_title flexbox">
              <text class="store_title_name ellipsis">{{item.store_name}}</text>
              <text class="fz24">月售{{item.month_count}}</text>
          </view>
          <view class="fz18">
            <text wx:if="{{item.discount>0}}">特惠</text>
            <text class="{{item.discount>0?'':'pink'}}" wx:for="{{item.list_store_tag}}" wx:for-item="tag" wx:key="{{tag.tag_name}}">{{tag.tag_name}}</text>
          </view>
        </view>
      </view>
      
      <view class="choice_list flexbox">
        <view class="choice_list_good" wx:for="{{item.list_goods}}" wx:for-item='goods' wx:key='{{goods.goods_name}}'>
          <image src="{{goods.goods_pic}}" lazy-load="true"  mode="aspectFill"></image>
          <view>{{goods.goods_name}}</view>
          <view class="pink">¥ <text class="fz22">{{goods.discount_price}}</text></view>
        </view>
      </view>
      <view class="choice_evaluate ellipsis" wx:if="{{item.evaluate !='暂无用户评价'}}">{{item.evaluate}}</view>
    </view>
  <image src="../../images/top.png" mode="aspectFit" class="toTop"  hidden='{{!floorstatus}}'  lazy-load="true" bindtap="toTop"> </image>
</template>