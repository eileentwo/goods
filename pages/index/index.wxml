          </swiper-item>
      </block>
      <!--重置小圆点的样式  -->
      <view class="dots">  
          <block wx:for="{{imgUrls}}">  
              <view class="dot {{index == currentSwiper ? ' dotactive' : ''}}"></view>  
          </block>  
      </view> 
    </swiper>
  
  </view>
