/* pages/allCategories /allCategories.wxss */

 @import "/template/wxss/waterfall.wxss"; 
 
.backhome {
  left: 30rpx;
}
.backhome image {
  width: 33rpx;
  height: 50rpx;

}


.selection{
  width: 100%;
  padding: 0 0 40rpx;
  color: #FF2041;
   background-color: #fff;
}
.selectbtn{
  width:600rpx;
  height: 64rpx;
  overflow: hidden;
  margin-left: 40rpx;
  border-radius:32rpx;
  font-size: 28rpx;
   background-color: #f3f3f3;
}
.selectbtn image {
  width: 36rpx;
  height: 36rpx;
  margin: 16rpx 16rpx 16rpx 24rpx;

}

.selectbtn .logo{
  width:70rpx;
  height: 70rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.placeholder{
  color: #939090;
}
.selectbtn input {
  width: 100%;
  height: 60rpx;
  color: #000;
}
.selection text{
  line-height: 60rpx;
  margin-left: 20rpx;
}
.paddingbox{
  padding:20rpx 0 20rpx 20rpx ;
  background-color: #fff;
  margin-bottom: 6rpx;
}
.allSelect{
  color: #808080;
}
.scrollView{
  background-color: #eee;
  padding:0  25rpx 25rpx 25rpx;
}
.nav_fl{
  white-space: nowrap; 
}

.nav_content .nav_label{
  display: inline-block;
  margin: 0 24rpx;
}
.nav_label view{
  padding: 10rpx 0;
  white-space: nowrap;
  color: #666666;
  border-bottom: 4rpx solid transparent;
}
.nav_content .navactive view{
  color:#FF2041;
  border-bottom-color:#FF2041;
}
.scrollTitle image{
  width: 180rpx;
  height: 50rpx;

}
.scrollTitle{
  padding:60rpx 0 20rpx; 
  height: 60rpx;
}
.categoriesUl{
  width: 700rpx;
  flex-wrap:wrap;
}
.categoriesLi{
  background-color: #fff;
  width: 173rpx;
  line-height: 80rpx;
  text-align: center;
  color: #666666;
  font-size: 30rpx;
  margin:0 2rpx 2rpx 0;
}
