/* pages/classification/classification.wxss */

 @import "/template/wxss/waterfall.wxss"; 
 .header{
   border-bottom: 2rpx solid #ccc;
   
 }
 .header1{
   margin-bottom: 0;
 }
 .store_item {
   border-bottom: 1px solid #ebf0ea;
 }
 
 .conditions{
   position: relative;

 }
 .conditions_title{
   align-items: center;
   border-bottom: 1px solid rgba(0,0,0, .2);
   line-height: 78rpx;
 }
 .categories{
   flex: auto;
   text-align: center;
   font-size: 26rpx;
   color: #666;
 }
 .categories image{
   width: 22rpx;
   height: 12rpx;
   vertical-align: text-top;
   margin:12rpx 0 0 10rpx;
 }
 .fruit{
   position: absolute;
   top: 80rpx;
   left: 0;
   width: 100%;
   background-color: rgba(0, 0, 0, .2 );
   z-index: 9999;
 }
 .categories_list{
   background-color: #fff;
   text-indent: 30rpx;
 }
 .categories_list_left{
   width: 340rpx;
   line-height: 1.8;
   font-size: 26rpx;
   color: #0A0A0A;
 }